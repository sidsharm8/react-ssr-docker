{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions" : [
		{
			"name": "client",
			"image": "sidsharm8/multi-ssr-render-server",
			"hostname": "client",
			"essential": false,
            "memory": 128,
            "links" : ["server"]            
		},
		{
			"name": "server",
			"image": "sidsharm8/multi-ssr-api-server",
			"hostname": "api",
			"essential": true,
            "memory": 128,
            "portMappings" : [
				{
					"hostPort" : 80,
					"containerPort" : 3000
				}
			]				
        }        
	]
}